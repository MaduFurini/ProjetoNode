<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="/css/login.css">

<body>
    <div class="container">
        <div class="content first-content">
            <div class="first-column">
                <h2 class="title title-primary">Bem vindo de volta!</h2>
                <button id="signin" class="btn btn-primary" onclick="window.location.href='/entrar'">Entrar!</button>
            </div>    
            <div class="second-column">
                <h2 class="title title-second">Ainda não é cadastrado?</h2>
                <p class="description description-second">Ajude usuários a sanarem suas dúvidas!</p>

                <form class="form" action="/cadastrar" method="post">
                    <label class="label-input" for="">
                        <i class="far fa-user icon-modify"></i>
                        <input name="nome" type="text" placeholder="Nome">
                    </label>
                    
                    <label name="email" class="label-input" for="">
                        <i class="far fa-envelope icon-modify"></i>
                        <input name="email" type="email" placeholder="Email">
                    </label>
                    
                    <label name="senha" class="label-input" for="">
                        <i class="fas fa-lock icon-modify"></i>
                        <input name="senha" type="password" placeholder="Senha">
                    </label>
                    
                    <button class="btn btn-second">Pronto</button>        
                </form>
            </div><!-- second column -->
        </div><!-- first content -->
    </div>
    <script src="js/app.js"></script>
</body>
</html>